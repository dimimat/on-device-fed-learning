<Button
    android:id="@+id/connect"
    style="@android:style/Widget.Material.Button.Colored"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5sp"
    android:backgroundTint="#F2B705"
    android:enabled="true"
    android:onClick="connect"
    android:text="Setup Connection Channel My Friend" />

<Button
    android:id="@+id/trainFederated"
    style="@android:style/Widget.Material.Button.Colored"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5sp"
    android:backgroundTint="#F2B705"
    android:enabled="false"
    android:onClick="runGrpc"
    android:text="Train Federated My Friend!" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="25sp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:text="Activity Log"
    android:textAlignment="center"
    android:textColor="#4a5663"
    android:textSize="16sp"
    android:textStyle="bold" />

    <TextView
        android:id="@+id/grpc_response_text"
        android:layout_width="346dp"
        android:layout_height="145dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#4a5663"
        android:gravity="bottom"
        android:nestedScrollingEnabled="true"
        android:overScrollMode="always"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbars="vertical"
        android:text="Welcome my Friend! \n"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000"
        android:textSize="12sp"
        android:verticalScrollbarPosition="defaultPosition" />

</LinearLayout>
